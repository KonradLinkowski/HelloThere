<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="style.css">
  <title>{{ vars.title }}</title>
</head>
<body>
  <article id="chat-page" class="chat-page hidden">
    <div class="chat-wrapper">
      <div id="chat-info" class="chat-info">
        <div>{{ chattingWith }}: <span id="info-gender"></span></div>
        <div>{{ usersOnline }}: <span id="info-users"></span></div>
      </div>
      <div id="chat-box" class="chat-box">
        <div id="typing-info" class="message-wrapper message-wrapper--left typing-wrapper hidden">
          <span class="message message--left typing">
            <span>&#8226;</span>
            <span>&#8226;</span>
            <span>&#8226;</span>
          </span>
        </div>
      </div>
      <div class="buttons-wrapper">
        <button id="chat-logout" class="btn">
          <i class="material-icons">settings</i>
        </button>
        <button id="chat-action" class="btn">
          <i id="action-leave" class="material-icons">close</i>
          <i id="action-search" class="material-icons">search</i>
          <i id="action-stop" class="material-icons">stop</i>
        </button>
        <input type="text" id="chat-input" class="chat-input" maxlength="1024" placeholder="{{ saySomething }}" autofocus>
        <button id="chat-send" class="btn"><i class="material-icons">send</i></button>
      </div>
    </div>
  </article>
  <article id="login-page" class="login-page">
    <div class="login-wrapper">
      <fieldset class="gen-fieldset">
        <legend>{{ whoAreYou }}</legend>
        <input type="radio" id="my-female" name="my-gender" data-gender="female" class="gen-box" checked>
        <label for="my-female" class="gen-label unselectable clickable">{{ female }}</label>
        <input type="radio" id="my-male" name="my-gender" data-gender="male" class="gen-box">
        <label for="my-male" class="gen-label unselectable clickable">{{ male }}</label>
      </fieldset>
      <fieldset class="gen-fieldset">
        <legend>{{ whoAreYouLookingFor }}</legend>
        <input type="checkbox" id="search-female" name="search-gender" data-gender="female" checked class="gen-box">
        <label for="search-female" class="gen-label unselectable clickable">{{ female }}</label>
        <input type="checkbox" id="search-male" name="search-gender" data-gender="male" checked class="gen-box">
        <label for="search-male" class="gen-label unselectable clickable">{{ male }}</label>
      </fieldset>
      <button id="search" class="btn">
        <i class="material-icons">search</i>
      </button>
    </div>
  </article>
  <script>
    window.rendVars = {
      title: "{{ vars.title }}",
      titleMessage: "{{ vars.titleMessage }}",
      connectedMessage: "{{ vars.connectedMessage }}",
      sayHello: "{{ vars.sayHello }}"
    }
  </script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="socket.js"></script>
  <script src="main.js"></script>
</body>
</html>